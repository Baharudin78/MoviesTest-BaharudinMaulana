<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.baharudin.moviestest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviesTest.NoActionBar"
        tools:targetApi="30">
        <activity
            android:name=".ui.tvshow.toprated.TopRatedTvShowActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.tvshow.popular.PopularTvShowActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.tvshow.airingtoday.AiringTodayTvShowActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.search.tvshow.SearchTvShowActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.search.movie.SearchMovieActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.movie.popular.PopularMovieActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.tvshow.detail.DetailTvShowActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.movie.detail.DetailMovieActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.favorite.FavoriteActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.MoviesTest.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>